  <div class="card mb-3">
    <div class="card-body">
      <h4 class="card-title"><%- item.title || theme.default_post_title || "Untitled" %></h4>
      <h6 class="card-subtitle mb-3 text-muted blockquote-footer"><%= item.date.format(config.date_format) %></h6>
      <a href="<%- config.root %><%- item.path %>" class="btn btn-sm btn-outline-info">Read More</a>
    </div>
  </div>